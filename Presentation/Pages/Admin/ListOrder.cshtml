@page
@using DataAccess.Enum
@using DataAccess.Model
@model Presentation.Pages.Admin.ListOrder

@{
    Layout = "Shared/_LayoutAdmin";
}
<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">DataTable with minimal features & hover style</h3>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <table class="table table-bordered table-hover" id="example2">
                            <thead>
                            <tr>
                                <th> ID </th>
                                <th> Order Date</th>
                                <th> Delivery Date</th>
                                <th>Received Date</th>
                                <th>Total Amount</th>
                                <th>Status</th>
                            </tr>
                            </thead>
                            <tbody>
                            @foreach (var item in Model.Order)
                            {
                                <tr>
                                    <td>@item.OrderId</td>
                                    <td>@item.OrderDate</td>
                                    <td>@item.DeliveryDate</td>
                                    <td>@item.ReceivedDate</td>
                                    <td class="project-state">
                                        @if (item.Status == OrderStatus.Receive.ToString())
                                        {
                                            <span class="badge badge-success">@Status.Active</span>
                                        }
                                        @*@if(item.Status == OrderStatus.Cancel.ToString())*@
                                        {
                                            <span class="badge badge-danger">@Status.Inactive</span>
                                        }
                                    </td>
                                </tr>
                            }
                            </tbody>
                            <tfoot>
                            <tr>
                                <th>Rendering engine</th>
                                <th>Browser</th>
                                <th>Platform(s)</th>
                                <th>Engine version</th>
                                <th>CSS grade</th>
                            </tr>
                            </tfoot>
                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->

            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</section>